<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        tools:targetApi="lollipop" />

    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content" android:layout_width="match_parent">

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edtUrl" android:minLines="1"
        android:maxLines="3" android:lines="3"
        android:hint="Please Enter URL(Eg: http://google.com)" android:layout_weight="1"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnWebView"
        android:layout_weight="1"
        android:text="Go"/>

</LinearLayout>

    <WebView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/webView"/>



</LinearLayout>